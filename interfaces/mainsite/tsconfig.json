{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules/**/*",
        "**/*.spec.ts",
        "dist"
    ],
    "references": [
        { "path": "../../packages/primary" },
        { "path": "../../packages/secondary" }
    ]
}
